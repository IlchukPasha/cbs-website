                <!-- Events Title -->
                <div class="col-12">
                    <div class="events-title">
                        <h2>Останні події ЦБС</h2>
                    </div>
                </div>

                <% events.results.forEach(function(event){ %>
                  <div class="col-12">
                      <!-- Single Upcoming Events Area -->
                      <div class="single-upcoming-events-area d-flex flex-wrap align-items-center">
                          <!-- Thumbnail -->
                          <div class="upcoming-events-thumbnail">
                              <img src="/static/img/bg-img/23.jpg" alt="">
                          </div>
                          <!-- Content -->
                          <div class="upcoming-events-content d-flex flex-wrap align-items-center">
                              <div class="events-text">
                                  <h4><%= event.title %></h4>
                                  <div class="events-meta">
                                      <a href="#"><i class="fa fa-calendar" aria-hidden="true"></i> <%= event.date %></a>
                                      <a href="#"><i class="fa fa-clock-o" aria-hidden="true"></i> <%= event.startedAt %> - <%= event.finishedAt %></a>
                                      <a href="#"><i class="fa fa-map-marker" aria-hidden="true"></i> <%= event.address %></a>
                                  </div>
                                  <p><%= event.shortDescription %></p>
                                  <a href="/events/<%= event.id %>">Читати більше <i class="fa fa-angle-double-right"></i></a>
                              </div>
                              <div class="find-out-more-btn">
                                  <a href="/events/<%= event.id %>" class="btn crose-btn btn-2">Переглянути</a>
                              </div>
                          </div>
                      </div>
                  </div>
