                <div class="col-12">
                    <div class="pagination-area mt-70">
                        <nav aria-label="Page navigation example">
                            <ul class="pagination justify-content-center">
                                <% range(1, Math.ceil(events.total / 5) + 1).forEach(page => { %>
                                  <% if (currentPage === page) { %>
                                    <li class="page-item active"><a class="page-link" href="?page=<%= page %>&perPage=5"><%= page %></a></li>
                                  <% } else { %>
                                    <li class="page-item"><a class="page-link" href="?page=<%= page %>&perPage=5"><%= page %></a></li>
